<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="0.65"
		android:orientation="vertical">


		<TextView
			android:id="@+id/txtInput"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="0.4"
			android:gravity="right"
			android:padding="10sp"
			android:textSize="15pt"/>


		<TextView
			android:id="@+id/txtSolution"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="0.6"
			android:gravity="right"
			android:padding="10sp"
			android:textSize="15pt"/>


	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layout_weight="0.35">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_weight="0.2">


			<Button
				android:id="@+id/btnClear"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#D8E7E8"
				android:onClick="onClickClear"
				android:text="C"
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnDivid"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#D8E7E8"
				android:onClick="onClickOperator"
				android:text="/"
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnMultiply"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#D8E7E8"
				android:onClick="onClickOperator"
				android:text="x"
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnBack"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#BBD5D7"
				android:onClick="onClickBackspace"
				android:text="âŒ«"
				android:textSize="40sp"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_weight="0.2">



		<Button
				android:id="@+id/btnSeven"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_border"
				android:onClick="onClickNumber"
				android:text="7"
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnEight"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/button_border"
				android:layout_weight="1"
				android:onClick="onClickNumber"
				android:text="8"
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnNine"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_border"
				android:onClick="onClickNumber"
				android:text="9"
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnSubstract"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#BBD5D7"
				android:onClick="onClickOperator"
				android:text="-"
				android:textSize="40sp"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_weight="0.2">



		<Button
				android:id="@+id/btnFour"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_border"
				android:onClick="onClickNumber"
				android:text="4"
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnFive"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_border"
				android:onClick="onClickNumber"
				android:text="5"
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnSix"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_border"
				android:onClick="onClickNumber"
				android:text="6"
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnAdd"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#BBD5D7"
				android:onClick="onClickOperator"
				android:text="+"
				android:textSize="40sp"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_weight="0.2">



		<Button
				android:id="@+id/btnOne"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_border"
				android:onClick="onClickNumber"
				android:text="1"
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnTwo"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_border"
				android:onClick="onClickNumber"
				android:text="2"
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnThree"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_border"
				android:onClick="onClickNumber"
				android:text="3"
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnParenthesis"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#BBD5D7"
				android:text="( )"
				android:textSize="40sp"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_weight="0.2">



		<Button
				android:id="@+id/btnZero"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_border"
				android:onClick="onClickNumber"
				android:text="0"
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnDecimal"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#BBD5D7"
				android:onClick="onClickDecimal"
				android:text="."
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnAbsolut"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#BBD5D7"
				android:text="+/-"
				android:textSize="40sp"/>


			<Button
				android:id="@+id/btnEquals"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#BBD5D7"
				android:onClick="onClickEqual"
				android:text="="
				android:textSize="40sp"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>